<h2>Edit Movie!</h2>


<form method="POST" action="/movies/{{oneMovie._id}}">

  <label for="title">Title</label>
  <input type="text" name="title" value="{{oneMovie.title}}">
  
  
  <label for="genre">Genre</label>
  <input type="text" name="genre" value="{{oneMovie.genre}}"> 
  
  <label for="plot">Plot</label>
  <input type="text" name="plot" value="{{oneMovie.plot}}"> 
  
  
  <label for="cast">Celebrities</label>
  {{!-- <input type="text" name="author" value="{{oneBook.author}}"> --}}
      <select name="cast">
      
      {{#each allCast}}
        {{!-- create option TAG --}}
        <option value={{this._id}}>{{this.name}}</option>

      {{/each}}

    </select>
  
  <br>

  <button>Add Changes</button>

</form>
